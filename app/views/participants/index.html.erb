<h1 class="text-3xl font-bold mb-4">Participantes</h1>
<%= link_to "Novo Participante", new_participant_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-4 inline-block" %>
<table class="w-full border-collapse">
  <thead>
    <tr class="bg-gray-200">
      <th class="border p-2">Nome</th>
      <th class="border p-2">Email</th>
      <th class="border p-2">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>
      <tr class="hover:bg-gray-100">
        <td class="border p-2"><%= participant.name %></td>
        <td class="border p-2"><%= participant.email %></td>
        <td class="border p-2">
          <%= link_to "Ver", participant, class: "text-blue-600 hover:underline" %>
          <%= link_to "Editar", edit_participant_path(participant), class: "text-blue-600 hover:underline" %>
          <%= link_to "Excluir", participant, method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>